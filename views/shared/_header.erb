<header id="mainHeader">
  <div id="header_menu">

    <div class="left">
      <a id="logo" href="<%= url(GlobalSettings.default_user_home) %>">Site</a>
    </div>

    <% if current_user %>
    
      <div class="search left">
        <input type="text" id="search_box" name="search_box" placeholder="Global Search">
      </div>
      
      <div class="right">
        <ul>
          <li><a href="<%= url('/profile') %>"><%= current_user.username %></a></li>
          <li><a href="<%= url('/logout') %>">Logout</a></li>
        </ul>


      </div>
      
    <% else %>
      <div class="right" style="line-height:3.5em;">
        <a class="" href="<%= url('/login') %>">LOGIN</a>&nbsp;&nbsp;or&nbsp;&nbsp;<a class="" href="<%= url('/signup') %>">SIGNUP</a>  
      </div>
    <% end %>

  </div>

  <% if current_user %>
    <section id="change-isin-dialog" title="Change Company View" class="popup-dialog">
      <article style="padding: 40px 40px 10px;">
        <form id="change-isin">
          <fieldset class="left span-6">
            <div class="field">
               <input id="isin" name="isin" type="hidden" value="" />
               <input id="company_isin" name="company" size="30" type="text">
            </div>
          </fieldset>      
          <div class="submit field">
            <input type="submit" name="submit" value="Save">
          </div>
        </form>
      </article>
    </section>

    <aside id="topsidebar">
      <div class="container content">

      </div>
    </aside>

  <% end %>

</header>




