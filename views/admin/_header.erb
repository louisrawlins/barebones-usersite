<% content_for :js do %>
  <script type='text/javascript' src='/js/header.js'></script>
<% end %>

<header id="mainHeader">
  <div id="header_menu">

    <div class="left">
      <a id="logo" href="<%= url(GlobalSettings.default_user_home) %>">Basic User Site</a>
    </div>

    <% if current_user %>
      
      <div class="search left">
        <input type="text" id="search_box" name="search_box" placeholder="Global Search">
      </div>
      
      <div class="right">
        <ul>
          <li><a href="<%= url('/profile') %>"><%= current_user.username %></a></li>
          <li><a href="<%= url('/logout') %>">Logout</a></li>
        </ul>
      </div>
      
    <% else %>
      <div class="right" style="line-height:3.5em;">
        <a class="" href="<%= url('/login') %>">LOGIN</a>&nbsp;&nbsp;or&nbsp;&nbsp;<a class="" href="<%= url('/signup') %>">SIGNUP</a>  
      </div>
    <% end %>

  </div>

</header>
